<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ManualFragment">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <ImageView
         android:id="@+id/miyahImage"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginTop="24dp"
         app:layout_constraintBottom_toTopOf="@+id/appTitle2"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@drawable/miyah_logo" />

     <TextView
         android:id="@+id/appTitle2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="120dp"
         android:text="Manual"
         android:textAlignment="center"
         android:textColor="@color/dark_blue"
         android:textSize="34sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />


     <TextView
         android:paddingLeft="5dp"
         android:paddingRight="5dp"
         android:layout_width="0dp"
         android:layout_marginTop="60dp"
         android:layout_height="wrap_content"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/appTitle2"
         android:textAppearance="@style/TextAppearance.AppCompat.Large"
         android:text="@string/manual_text"
         android:gravity="center"
         android:textColor="@color/dark_blue"
         />

 </androidx.constraintlayout.widget.ConstraintLayout>

</layout>